<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="BaseTextBlock">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14"/>
    </Style >
    <Style TargetType="TextBlock" x:Key="MainTextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Setter Property="Margin" Value="5"/>
    </Style >
    <Style TargetType="TextBlock" x:Key="HeaderTextBlock" BasedOn="{StaticResource BaseTextBlock}">
        <Style.Setters>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>